<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.demo.common.mapper.CommonMapper">

    <select id="selectColumns" resultType="map">
        SELECT /* SQL : com.example.demo.common.mapper.CommonMapper.selectColumns */
            column_name AS name,
            data_type AS dataType
        FROM user_tab_columns
        WHERE table_name = UPPER(#{tableId})
        ORDER BY column_id
    </select>



    <select id="getSelectAll" resultType="map">
        SELECT /* SQL : com.example.demo.common.mapper.CommonMapper.getSelectAll */
            ${selectSql}
        FROM ${tableId}
        WHERE USEYN = 'Y'
    </select>



</mapper>